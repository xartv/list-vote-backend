generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String  @unique
  password String
  name     String?

  lists        UserList[] @relation("ListAccess")
  createdLists List[]     @relation("ListAuthor")

  listItems ListItem[] @relation("ListItemAuthor")

  @@map("user")
}

model List {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title String

  accessUsers UserList[] @relation("ListAccess")

  authorId String @map("author_id")
  author   User   @relation("ListAuthor", fields: [authorId], references: [id])

  items ListItem[] @relation("ListItems")

  @@map("list")
}

model UserList {
  userId String @map("user_id")
  listId String @map("list_id")
  user   User   @relation("ListAccess", fields: [userId], references: [id])
  list   List   @relation("ListAccess", fields: [listId], references: [id])

  @@id([userId, listId])
}

model ListItem {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title  String
  rating Rating // enum with values 1 to 5

  authorId String @map("author_id")
  author   User   @relation("ListItemAuthor", fields: [authorId], references: [id])

  listId String @map("list_id")
  list   List   @relation("ListItems", fields: [listId], references: [id])

  @@map("list_item")
}

enum Rating {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}
